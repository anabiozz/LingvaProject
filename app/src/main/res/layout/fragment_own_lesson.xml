<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal" 
  		android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="@drawable/search14"
            android:contentDescription="@string/description" 
            android:layout_alignParentStart="true"/>
        
        <ImageButton
            android:id="@+id/dontLearnWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/trashcan7"
            android:contentDescription="@string/description" 
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/musician6"
            android:contentDescription="@string/description"
            android:layout_marginEnd="40dp"
			android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <ScrollView
		    android:id="@+id/SCROLLER_ID"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1.0"
		    android:scrollbars="vertical"
		    android:fillViewport="true">

        <TextView
            android:id="@+id/mainOwnDataTextView"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="40sp" />
        </ScrollView>

        <TextView
            android:id="@+id/translat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="25sp"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/countWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>